{
	"name": "easter-in-pasadena",
	"version": "1.0.0",
	"main": "src/index.js",
	"scripts": {
		"dev": "webpack serve --config webpack/webpack.dev.js",
		"build": "webpack --config webpack/webpack.prod.js",
		"deploy": "npm run build && gh-pages -d dist",
		"watch:sass": "npx sass --watch src/scss:dist/css --load-path=src/scss",
		"watch": "npm-run-all --parallel watch:sass dev",
		"clean": "rm -rf dist && npm run build",
		"wipe": "rm -rf node_modules && rm -rf package-lock.json",
		"update": "npx npm-check-updates -u && npm install",
		"clean:cache": "npm cache clean --force && rm -rf node_modules package-lock.json && npm install"
	},
	"author": "Michelle Hu",
	"license": "ISC",
	"description": "",
	"repository": {
		"type": "git",
		"url": "https://github.com/itsmichellehu/easter-in-pasadena.git"
	},
	"bugs": {
		"url": "https://github.com/itsmichellehu/easter-in-pasadena/issues"
	},
	"homepage": "https://itsmichellehu.github.io/easter-in-pasadena",
	"devDependencies": {
		"gh-pages": "^6.3.0"
	}
}